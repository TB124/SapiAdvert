<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.thomas.sapiadvert.AdvertismentReadActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ad_read_titleTextView"
            android:layout_width="match_parent"
            android:layout_height="59dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Details" />

        <TextView
            android:id="@+id/ad_read_detailsTextView"
            android:layout_width="match_parent"
            android:layout_height="123dp"
            android:text="TextView" />

        <ImageView
            android:id="@+id/ad_read_mainPictureImageView"
            android:layout_width="match_parent"
            android:layout_height="164dp"
            android:scaleType="fitXY"
            app:srcCompat="@android:drawable/btn_star" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ad_read_profilePictureImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <Button
                android:id="@+id/ad_read_callButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="13dp"
                android:text="Call adverter" />
        </RelativeLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
